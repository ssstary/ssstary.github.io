/* -- mobile(start) -- */
@media screen and (max-width: 767px) {

/*~~~~~~~~~~~~~~~~~~~~visual*/

	section.sec_visual { overflow: hidden; position: relative; width: 100%; height: 400px; margin-top: 80px; }
	section.sec_visual > div.slides { position: absolute; top: 0; left: 0; z-index: 0; width: 100%; height: 100%; }
	section.sec_visual > div.s_1 { z-index: 0; }
	section.sec_visual > div.s_2 { z-index: 1; transform: translateX(100%); }

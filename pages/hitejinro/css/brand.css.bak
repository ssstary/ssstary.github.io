	section.sec_beer > div.inner_wrap > div.menu > div.beer_ex > p.title { display: inline-block; margin-bottom: 20px; font-size: 1.25em; font-weight: bold; border-bottom: 1px solid #0096d6; }
	section.sec_beer > div.inner_wrap > div.menu > div.beer_ex > p.sub { margin-bottom: 20px; padding: 0 10px; font-weight: bold; }
	section.sec_beer > div.inner_wrap > div.menu > div.beer_ex > p.sub_ex { font-size: 0.875em; padding: 0 10px; }
	section.sec_beer > div.inner_wrap > div.menu > div.beer_ex > div.sns > a { overflow: hidden; display: inline-block; margin: 100px 10px; width: 50px; height: 50px; vertical-align: middle; background: url("../images/btn_sns.png") no-repeat ; background-size: cover; font-size: 1px; text-indent: -99999em; }
	section.sec_beer > div.inner_wrap > div.menu > div.beer_ex > div.sns > a:nth-of-type(1) { background-position: -150px 0; }
	section.sec_beer > div.inner_wrap > div.menu > div.beer_ex > div.sns > a:nth-of-type(2) { background-position: -200px 0; }
	section.sec_beer > div.inner_wrap > div.menu > div.beer_ex > div.sns > a:nth-of-type(3) { background-position: -250px 0; }
	section.sec_beer > div.inner_wrap > div.menu > div.beer_img { width: 100%; }
	section.sec_beer > div.inner_wrap > div.menu > div.beer_img > img { display: block; width: 80%; margin: 0 auto; }
	section.sec_beer > div.inner_wrap > div.menu:nth-child(2) { display: none; }
	section.sec_beer > div.inner_wrap > div.menu:nth-child(3) { display: none; }
	section.sec_beer > div.inner_wrap > div.menu:nth-child(4) { display: none; }
	section.sec_beer > div.inner_wrap > div.menu:nth-child(5) { display: none; }
	section.sec_beer > div.inner_wrap > div.menu:nth-child(6) { display: none; }

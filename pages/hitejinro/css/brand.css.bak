	section.sec_visual > div.slides:nth-of-type(2) { background: url("../images/bg_index_visual_02_M.png") no-repeat center center; background-size: cover; }
	section.sec_visual > div.slides:nth-of-type(3) { background: url("../images/bg_index_visual_03_M.png") no-repeat center center; background-size: cover; }
	section.sec_visual > div.slides:nth-of-type(4) { background: url("../images/bg_index_visual_04_M.png") no-repeat center center; background-size: cover; }
	section.sec_visual > div.slides:nth-of-type(5) { background: url("../images/bg_index_visual_05_M.png") no-repeat center center; background-size: cover; }
	section.sec_visual > div.slides:nth-of-type(6) { background: url("../images/bg_index_visual_06_M.png") no-repeat center center; background-size: cover; }
	section.sec_visual > div.slides:nth-of-type(7) { background: url("../images/bg_index_visual_07_M.png") no-repeat center center; background-size: cover; }
	section.sec_visual > div.slides:nth-of-type(8) { background: url("../images/bg_index_visual_08_M.png") no-repeat center center; background-size: cover; }

/*~~~~~~~~~~~~~~~~~~~~brand*/

	section.sec_beer { margin: 90px 0; }

@charset "utf-8";
/* CSS Document */

/* ++++++++++ Media Query ++++++++++ */
/* -- mobile(start) -- */
@media screen and (max-width: 767px) {

/*~~~~~~~~~~~~~~~~~~~~visual*/

	div.view { width: 100vw; height: 100vh; }
	div.view > section { width: 100%; height: 100%; }
	div.view > section.visual > div.wrapper { position: relative; width: 100%; height: 100%; }

	div.view > section.visual > div.wrapper > img.dr_bg { position: absolute; top: 0; left: 0; width: 100vw; height: 100vh; object-fit: cover; transition: all 0.2s; }
	div.view > section.visual > div.wrapper > img.dr_bg_sub { position: absolute; top: 50%; left: 50%; width: 80%; transition: all 0.2s; transform: translate(-50%, -50%); }
	
/*~~~~~~~~~~~~~~~~~~~~intro*/

	div.view > section.intro { position: absolute; width: 100%; height: 100vh; min-height: 800px; background: #fff; }
	div.view > section.intro > div.info { position: absolute; top: 70%; left: 50%; width: 80%; margin-bottom: 80px; transform: translate(-50%, -50%); }
	div.view > section.intro > div.info > p { margin-top: 15px; text-align: center; font-family: "Montserrat_Regular"; }
	div.view > section.intro > div.info > div.inner_wrap { margin-top: 100px; width: 100%; height: auto; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li { width: 100%; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a { text-align: center; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a > img { width: 100%; height: 100%; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a > h3 { margin: 10px 0 20px 0; font-family: "Montserrat_Regular"; font-size: 0.875em; }

}
/* -- moblie(end) -- */

/*++++++++++++++++++++++++++*/

/* -- tablet(start) -- */
@media screen and (min-width: 768px) and (max-width: 1024px) {

/*~~~~~~~~~~~~~~~~~~~~visual*/

	div.view { overflow: hidden; position: relative; width: 100vw; height: 100vh; }
	div.view > section { position: absolute; top: 0; left: 0; z-index: 0; width: 100%; height: 100%; }
	div.view > section.cur { z-index: 10; }
	div.view > section.next { z-index: 5; transform: translateX(100%); }
	div.view > section.visual > div.wrapper { position: relative; width: 100%; height: 100%; }

	div.view > section.visual > div.wrapper > img.dr_bg { position: absolute; top: 0; left: 0; width: 100vw; height: 100vh; object-fit: cover; transition: all 0.2s; }
	div.view > section.visual > div.wrapper > img.dr_bg_sub { position: absolute; top: 50%; left: 50%; width: 65%; transition: all 0.2s; transform: translate(-50%, -50%); }
	
/*~~~~~~~~~~~~~~~~~~~~intro*/

	div.view > section.intro { position: absolute; width: 100%; height: 100vh; min-height: 800px; background: #fff; }
	div.view > section.intro > div.info { position: absolute; top: 50%; left: 50%; width: 80%; transform: translate(-50%, -50%); }
	div.view > section.intro > div.info > p { margin-top: 15px; text-align: center; font-family: "Montserrat_Regular"; font-size: 1.125em; }
	div.view > section.intro > div.info > div.inner_wrap { margin-top: 100px; width: 100%; height: 37.6086%; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li { float: left; width: 32.2033%; margin-right: 1.6949%; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li:last-child { margin-right: 0; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a { text-align: center; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a > img { width: 100%; height: 100%; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a > h3 { margin-top: 20px; font-family: "Montserrat_Regular"; font-size: 1.25em; }

}
/* -- tablet(end) -- */

/*++++++++++++++++++++++++++*/

/* -- desktop(start) -- */
@media screen and (min-width: 1025px) {


/*~~~~~~~~~~~~~~~~~~~~visual*/

	div.view { overflow: hidden; position: relative; width: 100vw; height: 100vh; }
	div.view > section { position: absolute; top: 0; left: 0; z-index: 0; width: 100%; height: 100%; }
	div.view > section.cur { z-index: 10; }
	div.view > section.next { z-index: 5; transform: translateX(100%); }
	div.view > section.visual > div.wrapper { overflow: hidden; position: relative; width: 100%; height: 100%; }

	div.view > section.visual > div.wrapper > img.dr_bg { position: absolute; top: -5%; left: -10%; width: 120vw; height: 110vh; object-fit: cover; transition: all 0.2s; }
	div.view > section.visual > div.wrapper > img.dr_bg_sub { position: absolute; top: 20%; left: 25%; width: 50%; transition: all 0.2s; }
	
/*~~~~~~~~~~~~~~~~~~~~intro*/

	div.view > section.intro { position: absolute; width: 100%; height: 100vh; min-height: 800px; background: #fff; }
	div.view > section.intro > div.info { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); }
	/*section.intro > div.info > h2 { margin-top: 17.9211%; }*/
	div.view > section.intro > div.info > p { margin-top: 2.1344%; text-align: center; font-family: "Montserrat_Regular"; font-size: 1.5em; }
	div.view > section.intro > div.info > div.inner_wrap { margin-top: 100px; width: 100%; height: 37.6086%; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li { float: left; width: 32.2033%; margin-right: 1.6949%; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li:last-child { margin-right: 0; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a { text-align: center; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a > img { width: 100%; height: 100%; }
	div.view > section.intro > div.info > div.inner_wrap > ul > li > a > h3 { margin-top: 30px; font-family: "Montserrat_Regular"; font-size: 1.875em; }

}
/* -- desktop(end) -- */
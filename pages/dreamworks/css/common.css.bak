@charset "utf-8";
/* CSS Document */

/* ++++++++++ Media Query ++++++++++ */
/* -- mobile(start) -- */
@media screen and (max-width: 767px) {

	div.inner_wrap { width: 100%; max-width: 767px; margin: 0 auto; }
	h2 { font-size: 1.25em; color: #000; text-align: center; }

	header { overflow: hidden; position: fixed; left: 0; top: 0; z-index: 90; width: 100%; height: 80px; background: rgba(0, 0, 0, 0.7); transition: all 0.3s; }
	header.on { height: 252px; background: rgba(0, 0, 0, 0.7); }
	header > div.inner_wrap { position: relative; height: 80px; }
	header > div.inner_wrap > h1 { position: absolute; left: 16px; top: 26px; width: 180px; height: 27px; }
	header > div.inner_wrap > h1 > a { display: block; width: 100%; height: 100%; background: url("../images/bg_logo.png") no-repeat; background-size: cover; font-size: 1px; text-indent: -99999em; }
	header > div.inner_wrap > nav { overflow-y: scroll; display: block; position: fixed; right: 0; top: 0; z-index: 99; width: 60vw; height: 100vh; padding: 90px 0 30px 30px; background: #000; transform: translateX(100%); transition: transform 0.3s; }
	/*header > div.inner_wrap > nav > ul > li { text-align: center; }*/
	header > div.inner_wrap > nav > ul > li > a { display: block; padding: 10px 0; border-bottom: 1px solid #ccc; color: #fff; line-height: 40px; background: url("../images/btn_ui_close.png") no-repeat 93% center; font-size: 0.875em; }
	header > div.inner_wrap > nav > ul > li > ul { display: none; }
	header > div.inner_wrap > nav > ul > li > ul > li > a { display: block; width: 100%; padding: 10px 0 10px 20px; font-size: 0.75em; color: #fff; }
	header > div.inner_wrap > button { display: block; position: absolute; top: 27px; right: 20px; z-index: 100; width: 26px; height: 20px; background: url("../images/btn_ui_menu.png") no-repeat center center; background-size: cover; text-indent: -99999em; }

	footer > div.foot > p.copy { position: fixed; bottom: 2%; left: 5%; z-index: 90; font-size: 0.875em; color: #000; }

}
/* -- moblie(end) -- */

/*++++++++++++++++++++++++++*/

/* -- tablet(start) -- */
@media screen and (min-width: 768px) and (max-width: 1024px) {

	div.inner_wrap { width: 100%; max-width: 1024px; margin: 0 auto; }
	h2 { font-size: 1.5em; color: #000; text-align: center; }

	header { overflow: hidden; position: fixed; left: 0; top: 0; z-index: 90; width: 100%; height: 90px; background: rgba(0, 0, 0, 0.7); transition: all 0.3s; }
	header.on { height: 252px; background: rgba(0, 0, 0, 0.7); }
	header > div.inner_wrap { position: relative; height: 90px; }
	header > div.inner_wrap > h1 { position: absolute; left: 26px; top: 26px; width: 250px; height: 38px; }
	header > div.inner_wrap > h1 > a { display: block; width: 100%; height: 100%; background: url("../images/bg_logo.png") no-repeat; background-size: cover; font-size: 1px; text-indent: -99999em; }
	header > div.inner_wrap > nav { overflow-y: scroll; display: block; position: fixed; right: 0; top: 0; z-index: 99; width: 60vw; height: 100vh; padding: 90px 0 30px 30px; background: #000; transform: translateX(100%); transition: transform 0.3s; }
	/*header > div.inner_wrap > nav > ul > li { text-align: center; }*/
	header > div.inner_wrap > nav > ul > li > a { display: block; padding: 20px 0; border-bottom: 1px solid #ccc; color: #fff; line-height: 40px; background: url("../images/btn_ui_close.png") no-repeat 93% center; }
	header > div.inner_wrap > nav > ul > li > ul { display: none; }
	header > div.inner_wrap > nav > ul > li > ul > li > a { display: block; width: 100%; padding: 15px 0 15px 25px; font-size: 0.875em; color: #fff; }
	header > div.inner_wrap > button { display: block; position: absolute; top: 32px; right: 32px; z-index: 100; width: 32px; height: 26px; background: url("../images/btn_ui_menu.png") no-repeat center center; background-size: cover; text-indent: -99999em; }

	footer > div.foot > p.copy { position: fixed; bottom: 2%; left: 5%; z-index: 90; color: #000; }

}
/* -- tablet(end) -- */

/*++++++++++++++++++++++++++*/

/* -- desktop(start) -- */
@media screen and (min-width: 1025px) {
	
	div.inner_wrap { width: 100%; max-width: 1180px; margin: 0 auto; }
	h2 { font-size: 1.875em; text-align: center; }

	header { overflow: hidden; position: fixed; left: 0; top: 0; z-index: 90; width: 100%; height: 100px; background: rgba(0, 0, 0, 0.7); transition: all 0.3s; }
	header.on { height: 262px; background: rgba(0, 0, 0, 0.7); }
	header > div.inner_wrap { position: relative; height: 100px; }
	header > div.inner_wrap > h1 { position: absolute; left: 0; top: 17px; width: 390px; height: 60px; }
	header > div.inner_wrap > h1 > a { display: block; width: 100%; height: 100%; background: url("../images/bg_logo.png") no-repeat; background-size: cover; font-size: 1px; text-indent: -99999em; }
	header > div.inner_wrap > nav { float: right; }
	header > div.inner_wrap > nav > ul > li { float: left; text-align: center; }
	header > div.inner_wrap > nav > ul > li > a { display: inline-block; height: 100px; padding: 0 20px; color: #fff; line-height: 100px; }
	header > div.inner_wrap > nav > ul > li:hover > a { font-weight: bold; }
	header > div.inner_wrap > nav > ul > li > ul { display: block; }
	header > div.inner_wrap > nav > ul > li > ul > li > a { display: block; width: 100%; padding: 10px; font-size: 0.875em; color: #fff; }
	header > div.inner_wrap > nav > ul > li > ul > li > a:hover { font-weight: bold; }
	header > div.inner_wrap > button { display: none; }

	footer > div.foot > p.copy { position: fixed; bottom: 2%; left: 5%; z-index: 90; color: #000; }

}
/* -- desktop(end) -- */